@model List<Magic_Villa_Web.Models.Dto.VillaDto.VillaDto>

@{
    ViewData["Title"] = "Villas";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Villa Management</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Villa
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Rate</th>
                        <th>Square Feet</th>
                        <th>Occupancy</th>
                        <th>Amenity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var villa in Model)
                    {
                        <tr class="p-5">
                            <td class="align-middle">
                                <strong>@villa.Name</strong>
                            </td>
                            <td class="align-middle">
                                <span class="badge bg-success">$@villa.Rate.ToString("N2")</span>
                            </td>
                            <td class="align-middle">@villa.SquareFeet sq ft</td>
                            <td class="align-middle">
                                <i class="bi bi-people-fill"></i> @villa.Occupancy
                            </td>
                            <td class="align-middle">
                                @if (!string.IsNullOrEmpty(villa.Amenity))
                                {
                                    <span title="@villa.Amenity">
                                        @(villa.Amenity.Length > 30 ? villa.Amenity.Substring(0, 30) + "..." : villa.Amenity)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td class="align-middle">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-name="@villa.Name" class="btn btn-outline-info" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-name="@villa.Name" class="btn btn-outline-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-name="@villa.Name" class="btn btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> No villas available. Click "Create New Villa" to add one.
        </div>
    }
</div>

<style>
    .table td {
        vertical-align: middle;
    }

    .btn-group-sm .btn {
        padding: 0.25rem 0.5rem;
    }
</style>
@model Magic_Villa_Web.Models.Dto.VillaDto.VillaDto

@{
    ViewData["Title"] = "Delete Villa";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Villa
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this villa? This action cannot be undone.
                    </div>

                    <h4 class="mb-4">Villa Details:</h4>

                    <dl class="row">
                        <dt class="col-sm-3">Name:</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Details:</dt>
                        <dd class="col-sm-9">@Model.Details</dd>

                        <dt class="col-sm-3">Rate:</dt>
                        <dd class="col-sm-9">$@Model.Rate per night</dd>

                        <dt class="col-sm-3">Square Footage:</dt>
                        <dd class="col-sm-9">@Model.SquareFeet sqft</dd>

                        <dt class="col-sm-3">Occupancy:</dt>
                        <dd class="col-sm-9">@Model.Occupancy guests</dd>

                        <dt class="col-sm-3">Amenities:</dt>
                        <dd class="col-sm-9">@Model.Amenity</dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mb-3">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;" />
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input asp-for="Id" type="hidden" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" value="Delete" class="btn btn-danger">
                                <i class="bi bi-trash3"></i> Delete Villa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@using Magic_Villa_Web.Models.Dto.VillaNumberDto

@model List<VillaNumberDto>

@{
    ViewData["Title"] = "Villa Numbers";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="bi bi-door-open"></i> Villa Numbers
            </h3>
            <a asp-action="Create" class="btn btn-light">
                <i class="bi bi-plus-circle"></i> Add New Villa Number
            </a>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Villa Number</th>
                                <th>Villa Name</th>
                                <th>Special Details</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var villaNumber in Model)
                            {
                                <tr>
                                    <td>
                                        <strong class="text-primary">
                                            <i class="bi bi-hash"></i>@villaNumber.VillaNum
                                        </strong>
                                    </td>
                                    <td>
                                        @if (villaNumber.Villa != null)
                                        {
                                            <span>@villaNumber.Villa.Name</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(villaNumber.SpecialDetails))
                                        {
                                            <span>@villaNumber.SpecialDetails</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">No special details</span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-villaNum="@villaNumber.VillaNum"
                                               class="btn btn-outline-info" title="View Details">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <a asp-action="Update" asp-route-villaNum="@villaNumber.VillaNum"
                                               class="btn btn-outline-warning" title="Edit">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-villaNum="@villaNumber.VillaNum"
                                               class="btn btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash3"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    <i class="bi bi-info-circle"></i>
                    No villa numbers found. Click "Add New Villa Number" to create one.
                </div>
            }
        </div>
    </div>
</div>